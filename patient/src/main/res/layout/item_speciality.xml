<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_speciality"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="@dimen/margin_card_medium"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/card_cornor_radius"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/img_speciality"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:padding="@dimen/margin_card_medium"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher" />

        <org.mmtextview.components.MMTextView
            android:id="@+id/txt_specialityname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxLines="2"
            android:text="Dental Specialist"
            android:textColor="@color/black"
            android:textSize="13sp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>