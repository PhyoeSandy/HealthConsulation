<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="220dp"
    android:layout_margin="5dp"
    android:elevation="@dimen/margin_card_medium"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/card_cornor_radius"
    app:cardElevation="@dimen/card_evaluation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/img_doctor_profile"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="@dimen/margin_card_medium"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher" />

        <org.mmtextview.components.MMTextView
            android:id="@+id/txt_doctorname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Dr . Mg Mg Win"
            android:textColor="@color/black"
            android:textSize="@dimen/text_small" />

        <org.mmtextview.components.MMTextView
            android:id="@+id/txt_specialityname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="အရေပြားနှင့် အလှပရေးရာ"
            android:textColor="@color/black"
            android:textSize="@dimen/text_small" />
    </LinearLayout>
</androidx.cardview.widget.CardView>